import java.util.Scanner;

public class Hamming {

	private char[] createArray(String word){
		int size = word.length();
		for(int i = 0; i < size; i++){
			array[i] = word.charAt(i);
		}
		return array;		
	}
	
	private int difference(char[] goalState, char[] initialState){
		diff = 0;
		int size = goalState.length;
		for (int i = 0; i < size; i++) {
			if (goalState[i] != initialState[i]) {
				diff++;
				//add i to array/ arrayList ..?
				//need to create pair objects?
			}
		}
		return diff;
	}
	

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		System.out.println("Please input two stirngs: ");
		
		String s = in.nextLine();
		String str = in.nextLine();
		
		int count = 0;
		int x = s.length();
		int y = str.length();
		
		if(x == y)
		{
			for(int i = 0; i < x; i++)
			{
				if (s.charAt(i) != str.charAt(i) )
				{
					count++;
					
				}
			}
			System.out.println(count);
		}
		
		
	}

}
